generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Appointment {
  id        Int      @id @default(autoincrement())
  date      DateTime
  startTime DateTime
  endTime   DateTime

  name      String
  email     String
  phone     String?

  createdAt DateTime @default(now())

  @@unique([date, startTime], name: "date_startTime")
  @@index([date])
  @@index([startTime])
  @@index([date, startTime])

  @@map("appointments")
}
