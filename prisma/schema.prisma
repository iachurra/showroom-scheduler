generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}


datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Appointment {
  id        Int      @id @default(autoincrement())

  // booking info
  date      DateTime
  startTime DateTime
  endTime   DateTime

  name      String
  email     String
  phone     String?

  createdAt DateTime @default(now())

  @@unique([startTime, endTime])
}
